var db = require(appRoot + "/app").db;

function UiLanguageSerializer(row){
    this.uiLanguage = {};
    this.uiLanguage.languageId = row.id;
    this.uiLanguage.language = row.language;
}

function UILanguages(){
    this.languageId="";
    this.language="";
}

findOne = function(fields, options, callback){
    db.findOne("UILanguage", fields, options, function(err, uiLanguage){

        if (err){
            callback(err);
        }
        callback(err, uiLanguage);
    });
};

findById = function(rowId, options, callback){
    db.findById("UILanguage", rowId, options, function(err, uiLanguage){
        if (err){
            return err;
        }
        callback(err, uiLanguage);
    });
};

getAll = function(options, callback){
    var options = options || {"orderBy":"language"};
    db.getAll("UILanguage", options, function(err, uiLanguages){
        if (err){
            return err;
        }
        callback(err, uiLanguages);
    })
};

module.exports = UILanguages;
module.exports.findOne = findOne;
module.exports.findById = findById;
module.exports.getAll = getAll;
module.exports.UiLanguageSerializer = UiLanguageSerializer;