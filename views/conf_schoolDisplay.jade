extends layout
block content
    div(style="width:50%; margin:auto")
        h3= school_page.school
        label(for="schoolName")= school_page.schoolName
        input(type="text" class="form-control" name="schoolName" id="schoolName" value=schoolToEdit.schoolName required="" maxlength=60 minlength=4, disabled="disabled")
        hr
        case user.GroupId
            when 1
                a(href="/conf/", class='btn btn-primary', type='button', style="margin:0.2em 1em 2em 1em")= buttons.back_button
            when 2
                a(href="/conf/", class='btn btn-primary', type='button', style="margin:0.2em 1em 2em 1em")= buttons.back_button
            default
                a(href="/", class='btn btn-primary', type='button', style="margin:0.2em 1em 2em 1em")= buttons.back_button
        a(href="/conf/school/" + schoolToEdit.id + "/edit/", class='btn btn-primary', type='button', style="margin:0.2em 1em 2em 1em")= buttons.edit_button
