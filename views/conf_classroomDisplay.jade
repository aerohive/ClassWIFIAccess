extends layout
block content
    div(style="width:50%; margin:auto")
        h3= classroom_page.classroom
        label(for="className")= classroom_page.classroomName
        input(type="text" class="form-control" name="classroomName" id="classroomName" value=classroomToEdit.classroomName disabled="disabled")
        hr
        if user.GroupId == 1
            label(for="SchoolId")= classroom_page.school
            select(class='form-control' name="SchoolId" disabled="disabled")
                option(selected="selected" )= classroomToEdit.schoolName
            hr
        label(for="DeviceId")= classroom_page.device
        select(class="form-control", disabled="disabled", name="DeviceId")
            option(selected="selected")= classroomToEdit.deviceHostname
        hr
        case user.GroupId
            when 1
                a(href="/conf/#classroom", class='btn btn-primary', type='button', style="margin:0.2em 1em 2em 1em")= buttons.back_button
            when 2
                a(href="/conf/#classroom", class='btn btn-primary', type='button', style="margin:0.2em 1em 2em 1em")= buttons.back_button
            default
                a(href="/", class='btn btn-primary', type='button', style="margin:0.2em 1em 2em 1em")= buttons.back_button
        a(href="/conf/classroom/" + classroomToEdit.id +"/edit/", class='btn btn-primary', type='button', style="margin:0.2em 1em 2em 1em")= buttons.edit_button
