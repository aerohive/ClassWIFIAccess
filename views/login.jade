doctype html
html
   head
      title= title
      meta(name="viewport" content="width=device-width, initial-scale=1")
      script(type='text/javascript' src='./javascripts/jquery-2.1.1.min.js')
      script(type='text/javascript' src='./javascripts/bootstrap.min.js')
      link(rel='stylesheet', href='/stylesheets/bootstrap.min.css')
   body(style="background-image: url('/images/background.jpg'); background-size:100%")
      div.container
         div.row
            div.col-sm-6.col-md-4.col-md-offset-4
               div(class="text-center login-title" style="padding:1em; background-color: rgba(247, 247, 247, 0.97);").box-shadow
                  h1(class="text-center login-title")= text.login_message
                  div.account-wall
                     img(class='profile-img', src='https://ssl.gstatic.com/accounts/ui/avatar_2x.png', style="border-radius: 50%; width: 25%; margin:1em")
                     form(class='form-signin', action='/login', method='POST')
                        input(type='text', name='username' class='form-control', placeholder=text.username,required, autofocus)
                        input(type='password', name='password' class='form-control', placeholder=text.password, required)
                        button(class='btn btn-lg btn-primary btn-block', type='submit')= text.login_button
                        span.clearfix
                  #message
                  if message
                     h4.text-center.error-message #{message}