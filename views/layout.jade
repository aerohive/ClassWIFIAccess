- var classroom = ""
- var lesson = ""
- var device = ""
- var conf = ""
- var dev = ""
- var active =  "border-top: 3px solid #337ab7;"
case current_page
    when "classroom"
        - var classroom = active
    when "lesson"
        - var lesson = active
    when "device"
        - var device = active
    when "conf"
        - var conf = active
    when "dev"
        - var dev = active


doctype html
html
    head
        title ClassWIFIAccess
        meta(name="viewport" content="width=device-width, initial-scale=1")
        script(language="JavaScript" type="text/javascript" src='/javascripts/jquery-2.1.1.min.js')
        script(language="JavaScript" type="text/javascript" src='/javascripts/bootstrap.min.js')
        script(language="JavaScript" type="text/javascript" src='/javascripts/FaviconAwesome.js')
        script(language="JavaScript" type="text/javascript" src='/javascripts/moment.min.js')
        script(language="JavaScript" type="text/javascript" src='/javascripts/bootstrap-datetimepicker.min.js')
        block script_header

        link(rel='stylesheet' href='/stylesheets/bootstrap.min.css')
        link(rel='stylesheet' href='/stylesheets/font-awesome.min.css')
        link(rel='stylesheet' href='/stylesheets/bootstrap-datetimepicker.min.css')
        link(rel='stylesheet' href='/stylesheets/schoolcontrol.css')
    body(style="padding-left:10%; padding-right:10%; margin:auto")
    div.container(style="float:left; margin-bottom: 20px")
        block nav
            .container-narrow
                .masthead
                    h3(class="muted nav pull-left" style="margin-top:0; padding-top: 10px;border-top: 3px solid #337ab7;") ClassWIFIAccess
                    div
                        ul(class="nav nav-pills pull-right")
                            li(style = classroom)
                                a(href="/classroom/")
                                    i(class="fa fa-graduation-cap fa-lg")
                            li(style = lesson)
                                a(href="/classroom/0/lesson/")
                                    i(class="fa fa-clock-o fa-lg")
                            if user.GroupId <= 2
                                li(style=device)
                                    a(href="/device/")
                                        i(class="fa fa-wifi fa-lg")
                                li(style=conf)
                                    a(href="/conf/")
                                        i(class="fa fa-gear fa-lg")
                            if user.GroupId == 1
                                li(style=dev)
                                    a(href="/dev/")
                                        i(class="fa fa-terminal fa-lg")
                            li
                                a(href="#" data-toggle="dropdown")
                                    i(class="fa fa-user fa-lg")
                                ul(class="dropdown-menu")
                                    li
                                        a(href="/conf/user/" + user.id + "/edit/")= user_button.account
                                    li(role="separator" class="divider")
                                    li
                                        a(href="/logout/")= user_button.logout
                            li
                                div(class="nav navbar-nav", style="line-height:50px; vertical-align:middle")= user.username
        hr(style="width:100%; float: left; margin-top: 0;")
        block admin
        div(style="width:100%; float: left; margin-bottom: 10px")
            block content
        block footer
            //#footer.footer(style="bottom:0px; position:fixed; background-color:white; border-top:0.1em solid #eee")
                div.container
                    p Copyright
                        i(class="fa fa-copyright")  Thomas Munzer

    block script_footer