extends layout_admin

block content
    div(style="float:left; width:100%; padding: 0px")
        section(id="device")
            if deviceList
                table(class="square")
                    tbody
                        - var itemNum = 0
                        while itemNum < deviceList.length
                            tr
                                td(style="width:50%;background-color:white;")
                                    - var device = deviceList[itemNum++]
                                    div
                                        h4= device.hostName
                                        case device.connected
                                           when true
                                               label(class="label label-success") Connected
                                           when false
                                               span(class="label label-danger") Disconnected
                                        br
                                        label Connected Clients
                                        span(class="badge")= " " + device.activeClients
                                        hr
                                        label MAC Address:
                                        span= " " + device.macAddress
                                        br
                                        label Serial Number:
                                        span= " " + device.serialId
                                        br
                                        label IP Address:
                                        span= " " + device.ip
                                        hr
                                        label Location:
                                        span= " " + device.locations

                                td(style="width:50%;background-color:white;")
                                    - var device = deviceList[itemNum++]
                                    if device
                                        div
                                            h4= device.hostName
                                            case device.connected
                                                when true
                                                    label(class="label label-success") Connected
                                                when false
                                                    span(class="label label-danger") Disconnected
                                            br
                                            label Connected Clients
                                            span(class="badge")= " " + device.activeClients
                                            hr
                                            label MAC Address:
                                            span= " " + device.macAddress
                                            br
                                            label Serial Number:
                                            span= " " + device.serialId
                                            br
                                            label IP Address:
                                            span= " " + device.ip
                                            hr
                                            label Location:
                                            span= " " + device.locations


